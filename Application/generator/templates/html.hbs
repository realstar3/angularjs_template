<div flex layout="row" layout-align="center none">
    <div id="{{frontend.FormName}}form" flex flex-md="80" flex-lg="65" flex-xl="55" style="max-height:none;">
        <a href="#">Home</a> > {{frontend.FormDescription}}
        <div layout-padding layout-margin flex-xs="100">
            <div layout="row" layout-align="center center" ng-if="{{firstLetterLower frontend.FormName}}Ctrl.data!=''">
                <md-input-container>
                    <md-icon>search</md-icon>
                    <input ng-model="{{firstLetterLower frontend.FormName}}Ctrl.searchString"
                        ng-change="changedSearch()" aria-label="Filter list" md-autofocus
                        md-placeholder="Filter your information...">
                </md-input-container>
                <md-button class="md-primary" ng-click="openRightSide()">
                    <md-icon>menu</md-icon>
                    <h6>Filter List</h6>
                </md-button>
            </div>
            <v-accordion id="accordionA" class="vAccordion--default"
                ng-hide="{{firstLetterLower frontend.FormName}}Ctrl.data===''" control="accordionA"
                onexpand="expandCallback(index, id)" oncollapse="collapseCallback(index, id)">
                <v-pane id="pane1" expanded>
                    <v-pane-header id="samplePane-header" aria-controls="samplePane-content">
                        \{{displayMessage}}
                    </v-pane-header>
                    <v-pane-content id="samplePane-content" aria-labelledby="samplePane-header">
                        <cog-{{frontend.FileName}}-grid
                            tablekeyword="{{firstLetterLower frontend.FormName}}Ctrl.searchString"
                            value="{{firstLetterLower frontend.FormName}}Ctrl.data"
                            keyword="{{firstLetterLower frontend.FormName}}Ctrl.keyword">
                        </cog-{{frontend.FileName}}-grid>
                    </v-pane-content>
                </v-pane>
            </v-accordion>
        </div>
    </div>
    <cog-{{frontend.FileName}}-find value="{{firstLetterLower frontend.FormName}}Ctrl.data"
        keyword="{{firstLetterLower frontend.FormName}}Ctrl.keyword"></cog-{{frontend.FileName}}-find>
</div>